extends layout

block body
    .container(ng-controller='AppCtrl')
        .row
            .col-md-2
                p All 
                    .btn-group
                        button(type="button" class="btn btn-default" ng-click="switchOn('all')") On
                        button(type="button" class="btn btn-default" ng-click="switchOff('all')") Off       
        .row
            .col-md-2
                p Living room 
                    .btn-group
                        button(type="button" class="btn btn-default" ng-click="switchOn(2)") On
                        button(type="button" class="btn btn-default" ng-click="switchOff(2)") Off 
        .row
            .col-md-2
                p Kitchen
                    .btn-group
                        button(type="button" class="btn btn-default" ng-click="switchOn(3)") On
                        button(type="button" class="btn btn-default" ng-click="switchOff(3)") Off 
        .row            
            .col-md-2
                p Hall
                    .btn-group
                        button(type="button" class="btn btn-default" ng-click="switchOn(1)") On
                        button(type="button" class="btn btn-default" ng-click="switchOff(1)") Off 
        .row            
            .col-md-2
                p Bathroom
                    .btn-group
                        button(type="button" class="btn btn-default" ng-click="switchOn(4)") On
                        button(type="button" class="btn btn-default" ng-click="switchOff(4)") Off 

    script(src='js/lib/angular/angular.js')
    script(src='js/app.js')
    script(src='js/services.js')
    script(src='js/controllers.js')
    script(src='js/filters.js')
    script(src='js/directives.js')
    script(src='js/lib/jquery/jquery-2.0.3.min.js')
    script(src='bootstrap/js/bootstrap.min.js')
